@model Presentation.Models.BooksCreateViewModel

<form action="/Books/Update" method="post" class="needs-validation" novalidate>
    @Html.AntiForgeryToken()

    <input type="hidden" name="Book.Id" value="@Model.Book.Id" />


    <div class="card shadow-sm">
        <div class="card-header">
            <h5 class="mb-0">Update Book</h5>
        </div>

        <div class="card-body">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

            <div class="mb-3">
                <label asp-for="Book.Title" class="form-label"></label>
                <input asp-for="Book.Title" class="form-control" />
                <span asp-validation-for="Book.Title" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Book.CategoryFK" class="form-label">Category</label>
                <select name="Book.CategoryFK">
                    <option value="-1">Pick a category</option>
                    @if (Model.Categories != null)
                    {
                        foreach (var cat in Model.Categories)
                        {
                            if(Model.Book.CategoryFK == cat.Id)
                            {<option value="@cat.Id" selected>@cat.Name</option>
                            }
                            else
                            {
                                <option value="@cat.Id" >@cat.Name</option>
                            }
                        }
                    }
                </select>
                <span asp-validation-for="Book.CategoryFK" class="text-danger"></span>
            </div>

            <div class="row">
                <div class="col-md-4 mb-3">
                    <label asp-for="Book.WholesalePrice" class="form-label">Wholesale price</label>
                    <input asp-for="Book.WholesalePrice" class="form-control" step="0.01" min="0" />
                    <span asp-validation-for="Book.WholesalePrice" class="text-danger"></span>
                </div>

                <div class="col-md-4 mb-3">
                    <label asp-for="Book.PublishedYear" class="form-label">Published year</label>
                    <input asp-for="Book.PublishedYear" class="form-control" min="1900" max="2100" />
                    <span asp-validation-for="Book.PublishedYear" class="text-danger"></span>
                </div>

                <div class="col-md-4 mb-3">
                    <label asp-for="Book.Stock" class="form-label"></label>
                    <input asp-for="Book.Stock" class="form-control" min="0" />
                    <span asp-validation-for="Book.Stock" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="card-footer text-end">
            <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
            <button type="submit" class="btn btn-primary">Save</button>
        </div>
    </div>
</form>
